<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Request an Event</title>
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            color: #333;
        }

        h1, h2 {
            text-align: center;
            color: #2c3e50;
        }

        p {
            text-align: center;
            max-width: 700px;
            margin: 10px auto 30px auto;
        }

        /* Form Styles */
        form {
            background: #fff;
            padding: 20px;
            margin: 0 auto;
            max-width: 700px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin: 15px 0 5px;
            font-weight: bold;
        }

        input, select {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1rem;
        }

        input[type="number"], input[type="date"], input[type="time"], input[type="text"], input[type="email"] {
            display: inline-block;
        }

        button {
            display: block;
            width: 100%;
            padding: 15px;
            font-size: 1rem;
            background: #2c3e50;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background: #34495e;
        }

        /* Section Headings */
        h2 {
            margin-top: 30px;
            border-bottom: 2px solid #2c3e50;
            padding-bottom: 5px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <h1>Schedule an Event</h1>
    <p>
        Turtle Shelter Project vests are the perfect service project for groups of all sizes and types.
        From individuals or families to hundreds of participants at corporate events, everyone can make a difference!
        Fill out the form below so we can help you plan an event tailored to your group.
    </p>

    <form action="/submit-event" method="POST">
        <!-- Event Details -->
        <h2>Event Details</h2>
        <label for="eventPreferredDate">Preferred Event Date</label>
        <input type="date" id="eventPreferredDate" name="EventPreferredDate" required>

        <label for="eventPossibleDate">Possible Date(s)</label>
        <input type="text" id="eventPossibleDate" name="EventPossibleDate">

        <label for="child">Number of Children</label>
        <input type="number" id="child" name="Child" value="0" min="0" required>

        <label for="teen">Number of Teens</label>
        <input type="number" id="teen" name="Teen" value="0" min="0" required>

        <label for="adult">Number of Adults</label>
        <input type="number" id="adult" name="Adult" value="0" min="0" required>

        <div id="totalParticipants" class="total">
            Total Participants: 0
        </div>

        <!-- Service Type -->
        <h2>Event Details</h2>
        <label for="service_type">Service Type</label>
        <select id="service_type" name="service_type" required>
            <option value="Sewing">Sewing</option>
            <option value="NonSewing">Non-Sewing</option>
            <option value="Both">Both</option>
        </select>

        <!-- Sewing-Specific Fields -->
        <div id="sewing-section" class="sewing-section">
            <label for="basicSewing">Basic Sewing Skills</label>
            <input type="number" id="basicSewing" name="BasicSewing">

            <label for="advancedSewing">Advanced Sewing Skills</label>
            <input type="number" id="advancedSewing" name="AdvancedSewing">

            <label for="sewingMachines">Number of Sewing Machines</label>
            <input type="number" id="sewingMachines" name="SewingMachines">

            <label for="sergers">Number of Sergers</label>
            <input type="number" id="sergers" name="Sergers">
        </div>

        <!-- Location Details -->
        <h2>Location Details</h2>
        <label for="streetAddress">Street Address</label>
        <input type="text" id="streetAddress" name="StreetAddress" required>

        <label for="city">City</label>
        <input type="text" id="city" name="City" required>

        <label for="state">State</label>
        <input type="text" id="state" name="State" required>

        <label for="zipcode">Zipcode</label>
        <input type="text" id="zipcode" name="Zipcode" required>

        <label for="sizeOfArea">Size of Area</label>
        <input type="text" id="sizeOfArea" name="Size of Area" required>

        <label for="preferredTime">Preferred Time</label>
        <input type="text" id="preferredTime" name="PreferredTime" required>

        <label for="preferredDuration">Preferred Duration</label>
        <input type="text" id="preferredDuration" name="PreferredDuration" required>

        <!-- Contact Information -->
        <h2>Contact Information</h2>
        <label for="contactFirstName">First Name</label>
        <input type="text" id="contactFirstName" name="ContactFirstName" required>

        <label for="contactLastName">Last Name</label>
        <input type="text" id="contactLastName" name="ContactLastName" required>

        <label for="contactPhone">Phone</label>
        <input type="text" id="contactPhone" name="ContactPhone" required>

        <label for="contactEmail">Email</label>
        <input type="email" id="contactEmail" name="ContactEmail" required>

        <!-- Additional Information -->
        <h2>Additional Information</h2>
        <label for="organizationName">Organization Name</label>
        <input type="text" id="organizationName" name="OrganizationName" required>

        <label for="story">Do you have a story? (Yes/No)</label>
        <select id="story" name="Story">
            <option value="yes">Yes</option>
            <option value="no">No</option>
        </select>

        <label for="willingToDonate">Willing to Donate? (Yes/No)</label>
        <select id="willingToDonate" name="willingToDonate">
            <option value="yes">Yes</option>
            <option value="no">No</option>
        </select>

        <button type="submit">Submit</button>
    </form>

    <script>
        // JavaScript to toggle the sewing section visibility
        const serviceType = document.getElementById('service_type');
        const sewingSection = document.getElementById('sewing-section');

        serviceType.addEventListener('change', () => {
            if (serviceType.value === 'Sewing' || serviceType.value === 'Both') {
                sewingSection.style.display = 'block';
            } else {
                sewingSection.style.display = 'none';
            }
        });

        // Input elements
        const childInput = document.getElementById('child');
        const teenInput = document.getElementById('teen');
        const adultInput = document.getElementById('adult');
        const totalParticipantsDiv = document.getElementById('totalParticipants');

        // Function to calculate and update the total participants
        function updateTotalParticipants() {
            const total =
                (parseInt(childInput.value) || 0) +
                (parseInt(teenInput.value) || 0) +
                (parseInt(adultInput.value) || 0);

            totalParticipantsDiv.textContent = `Total Participants: ${total}`;
        }

        // Attach event listeners to update total on input change
        [childInput, teenInput, adultInput].forEach(input => {
            input.addEventListener('input', updateTotalParticipants);
        });

        // Initialize the total participants display
        updateTotalParticipants();


    </script>

</body>
</html>
