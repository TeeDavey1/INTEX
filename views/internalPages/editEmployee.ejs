                <option value="IL" <%= employee.empstate === 'IL' ? 'selected' : '' %>>Illinois</option>
                <option value="IN" <%= employee.empstate === 'IN' ? 'selected' : '' %>>Indiana</option>
                <option value="IA" <%= employee.empstate === 'IA' ? 'selected' : '' %>>Iowa</option>
