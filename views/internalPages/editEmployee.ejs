<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Employee</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }
    header {
      background-color: #333;
      color: white;
      padding: 20px 0;
      text-align: center;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    h1 {
      font-size: 2.5rem;
      margin: 0;
      font-weight: 600;
    }
    .container {
      width: 80%;
      margin: 20px auto;
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    h2 {
      text-align: center;
      color: #333;
      font-size: 2rem;
    }
    .section {
      margin: 20px 0;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 8px;
      background-color: #f9f9f9;
    }
    .section h3 {
      font-size: 1.5rem;
      color: #333;
      margin-bottom: 10px;
    }
    .info {
      margin: 8px 0;
      font-size: 16px;
      color: #555;
    }
    .info span {
      font-weight: bold;
      color: #333;
    }
    .row {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
    }
    .column {
      flex: 1;
      min-width: 200px;
    }
    input, select {
      width: 100%;
      padding: 8px;
      margin: 5px 0;
      border-radius: 5px;
      border: 1px solid #ccc;
      box-sizing: border-box; /* Ensures padding doesn't cause overflow */
    }
    button {
      background-color: #228B22;
      color: white;
      border: none;
      padding: 8px 16px;
      cursor: pointer;
      font-size: 14px;
      border-radius: 5px;
    }
    button:hover {
      background-color: #1e7e1e;
    }
    .action-buttons {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-top: 20px;
    }
    .back-btn {
      display: block;
      width: 200px;
      margin: 20px auto;
      text-align: center;
    }
  </style>
</head>
<body>

  <header>
    <h1>Edit Employee</h1>
  </header>

  <div class="container">
    <h2>Update Employee Details for <%= employee.empfirst %> <%= employee.emplast %></h2>

    <!-- Personal Information and Address Sections Side by Side -->
    <div class="row">
      <div class="column">
        <div class="section">
          <h3>Personal Information</h3>
          <label for="empfirst">First Name:</label>
          <input type="text" id="empfirst" name="empfirst" value="<%= employee.empfirst %>" required>

          <label for="emplast">Last Name:</label>
          <input type="text" id="emplast" name="emplast" value="<%= employee.emplast %>" required>

          <label for="empphone">Phone:</label>
          <input type="text" id="empphone" name="empphone" value="<%= employee.empphone %>" required>

          <label for="empemail">Email:</label>
          <input type="email" id="empemail" name="empemail" value="<%= employee.empemail %>" required>

          <label for="empbirthday">Birthday:</label>
          <input type="date" id="empbirthday" name="empbirthday" value="<%= new Date(employee.empbirthday).toISOString().split('T')[0] %>" required>

          <label for="empgender">Gender:</label>
          <input type="text" id="empgender" name="empgender" value="<%= employee.empgender %>" required>

          <label for="empshirtsize">Shirt Size:</label>
          <input type="text" id="empshirtsize" name="empshirtsize" value="<%= employee.empshirtsize %>" required>

          <label for="empusername">Username:</label>
          <input type="text" id="empusername" name="empusername" value="<%= employee.empusername %>" required>
        </div>
      </div>

      <div class="column">
        <div class="section">
          <h3>Address</h3>
          <label for="empstreetaddress">Street Address:</label>
          <input type="text" id="empstreetaddress" name="empstreetaddress" value="<%= employee.empstreetaddress %>" required>

          <label for="empcity">City:</label>
          <input type="text" id="empcity" name="empcity" value="<%= employee.empcity %>" required>

          <label for="empstate">State:</label>
          <input type="text" id="empstate" name="empstate" value="<%= employee.empstate %>" required>

          <label for="empzipcode">Zipcode:</label>
          <input type="text" id="empzipcode" name="empzipcode" value="<%= employee.empzipcode %>" required>
        </div>
      </div>
    </div>

    <!-- Job Information Section Below -->
    <div class="section">
      <h3>Job Information</h3>
      <label for="empjobtitle">Job Title:</label>
      <input type="text" id="empjobtitle" name="empjobtitle" value="<%= employee.empjobtitle %>" required>

      <label for="empsalary">Salary:</label>
      <input type="text" id="empsalary" name="empsalary" value="<%= employee.empsalary %>" required>

      <label for="empstartdate">Start Date:</label>
      <input type="date" id="empstartdate" name="empstartdate" value="<%= new Date(employee.empstartdate).toISOString().split('T')[0] %>" required>

      <label for="empstatus">Status:</label>
      <input type="text" id="empstatus" name="empstatus" value="<%= employee.empstatus %>" required>

      <label for="empsewinglevel">Sewing Level:</label>
      <input type="text" id="empsewinglevel" name="empsewinglevel" value="<%= employee.empsewinglevel %>" required>
    </div>

    <div class="action-buttons">
      <button type="submit" onclick="return confirmSave(event)">Save Changes</button>
      <a href="/maintainEmployees">
        <button type="button">Cancel</button>
      </a>
    </div>

  </div>

  <script>
    function confirmSave(event) {
      // Display confirmation prompt
      if (!confirm("Are you sure you want to save changes?")) {
        event.preventDefault(); // Prevent form submission if user cancels
        return false;
      }
      // If confirmed, return true and submit the form
      window.history.back(); // Go back to the previous page
    }
  </script>

</body>
</html>
