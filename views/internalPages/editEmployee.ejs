                <option value="LA" <%= employee.empstate === 'LA' ? 'selected' : '' %>>Louisiana</option>
                <option value="ME" <%= employee.empstate === 'ME' ? 'selected' : '' %>>Maine</option>
                <option value="MD" <%= employee.empstate === 'MD' ? 'selected' : '' %>>Maryland</option>
                <option value="MA" <%= employee.empstate === 'MA' ? 'selected' : '' %>>Massachusetts</option>
                <option value="MI" <%= employee.empstate === 'MI' ? 'selected' : '' %>>Michigan</option>
                <option value="MN" <%= employee.empstate === 'MN' ? 'selected' : '' %>>Minnesota</option>
