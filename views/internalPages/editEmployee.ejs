                <option value="CO" <%= employee.empstate === 'CO' ? 'selected' : '' %>>Colorado</option>
                <option value="CT" <%= employee.empstate === 'CT' ? 'selected' : '' %>>Connecticut</option>
                <option value="DE" <%= employee.empstate === 'DE' ? 'selected' : '' %>>Delaware</option>
                <option value="FL" <%= employee.empstate === 'FL' ? 'selected' : '' %>>Florida</option>
