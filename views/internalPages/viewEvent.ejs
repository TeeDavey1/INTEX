<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Event</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }
    header {
      background-color: #333;
      color: white;
      padding: 20px 0;
      text-align: center;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    h1 {
      font-size: 2.5rem;
      margin: 0;
      font-weight: 600;
    }
    .container {
      width: 80%;
      margin: 20px auto;
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    h2 {
      text-align: center;
      color: #333;
      font-size: 2rem;
    }
    .section {
      margin: 20px 0;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 8px;
      background-color: #f9f9f9;
    }
    .section h3 {
      font-size: 1.5rem;
      color: #333;
      margin-bottom: 10px;
    }
    .info {
      margin: 8px 0;
      font-size: 16px;
      color: #555;
    }
    .info span {
      font-weight: bold;
      color: #333;
    }
    .row {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
    }
    .column {
      flex: 1;
      min-width: 200px;
    }
    button {
      background-color: #228B22;
      color: white;
      border: none;
      padding: 8px 16px;
      cursor: pointer;
      font-size: 14px;
      border-radius: 5px;
    }
    button:hover {
      background-color: #1e7e1e;
    }
    .back-btn {
      display: block;
      width: 200px;
      margin: 20px auto;
      text-align: center;
    }
    .action-buttons {
      display: flex;
      justify-content: center;
      gap: 15px; /* Space between buttons */
      margin-top: 20px;
    }

    .action-buttons a, .action-buttons form {
      display: inline-block;
    }

    button {
      background-color: #228B22;
      color: white;
      border: none;
      padding: 8px 16px;
      cursor: pointer;
      font-size: 14px;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    button:hover {
      background-color: #1e7e1e;
    }

    .back-btn {
      display: block;
      width: 200px;
      margin: 20px auto;
      text-align: center;
    }

  </style>
</head>
<body>

  <header>
    <h1>Event Details</h1>
  </header>

  <div class="container">
    <h2>Event ID: <%= event.eventid %> - <%= event.contactfirst %> <%= event.contactlast %></h2>

    <!-- Contact Information and Participation Details -->
    <div class="row">
        <div class="column">
            <div class="section">
                <h3>Contact Information</h3>
                <div class="info"><span>Phone:</span> <%= event.contactphone %></div>
                <div class="info"><span>Email:</span> <%= event.contactemail %></div>
            </div>
        </div>
        <div class="column">
            <div class="section">
                <h3>Participant Details</h3>
                <div class="info"><span>Total Participants:</span> <%= event.participants %></div>
                <div class="info"><span>Child Participants:</span> <%= event.child %></div>
                <div class="info"><span>Teen Participants:</span> <%= event.teen %></div>
                <div class="info"><span>Adult Participants:</span> <%= event.adult %></div>
            </div>
        </div>
    </div>

    <!-- Request Information and Event Preferences -->
    <div class="row">
        <div class="column">
            <div class="section">
                <h3>Request Information</h3>
                <div class="info"><span>Date Request Sent:</span> <%= event.daterequestsent %></div>
                <div class="info"><span>Time Request Sent:</span> <%= event.timerequestsent %></div>
                <div class="info"><span>Event Preferred Date:</span> <%= event.eventprefdate %></div>
                <div class="info"><span>Event Possible Date:</span> <%= event.eventpossdate %></div>
            </div>
        </div>
        <div class="column">
            <div class="section">
                <h3>Event Preferences</h3>
                <div class="info"><span>Preferred Time:</span> <%= event.preftime %></div>
                <div class="info"><span>Preferred Duration:</span> <%= event.prefduration %></div>
                <div class="info"><span>Service Type:</span> <%= event.servicetype %></div>
            </div>
        </div>
    </div>

    <!-- Sewing Requirements -->
    <div class="section">
        <h3>Sewing Requirements</h3>
        <div class="info"><span>Basic Sewing:</span> <%= event.basicsewing %></div>
        <div class="info"><span>Advanced Sewing:</span> <%= event.advsewing %></div>
        <div class="info"><span>Sewing Machines:</span> <%= event.sewingmachines %></div>
        <div class="info"><span>Sergers:</span> <%= event.sergers %></div>
    </div>

    <!-- Address Information -->
    <div class="row">
        <div class="column">
            <div class="section">
                <h3>Address</h3>
                <div class="info"><span>Street Address:</span> <%= event.streetaddress %></div>
                <div class="info"><span>City:</span> <%= event.city %></div>
                <div class="info"><span>State:</span> <%= event.state %></div>
                <div class="info"><span>Zip Code:</span> <%= event.zipcode %></div>
            </div>
        </div>
        <div class="column">
            <div class="section">
                <h3>Event Location</h3>
                <div class="info"><span>Size of Area:</span> <%= event.sizeofarea %></div>
            </div>
        </div>
    </div>

    <!-- Organization and Story -->
    <div class="section">
        <h3>Organization Details</h3>
        <div class="info"><span>Organization Name:</span> <%= event.organizationname %></div>
        <div class="info"><span>Story:</span> <%= event.story %></div>
        <div class="info"><span>Willing to Donate:</span> <%= event.willingtodonate %></div>
    </div>

    <!-- Event Status -->
    <div class="section">
        <h3>Event Status</h3>
        <div class="info"><span>Status:</span> <%= event.eventstatus %></div>
        <div class="info"><span>Actual Date:</span> <%= event.actualdate %></div>
        <div class="info"><span>Actual Duration:</span> <%= event.actualduration %></div>
        <div class="info"><span>Actual Event Time:</span> <%= event.actualeventtime %></div>
        <div class="info"><span>Actual Participants:</span> <%= event.actualparticipants %></div>
    </div>

    <div class="action-buttons">
        <a href="/editEvent/<%= event.eventid %>">
            <button>Edit</button>
        </a>
        <form action="/deleteEvent/<%= event.eventid %>" method="POST" style="display:inline;" onsubmit="confirmDelete(event)">
            <button type="submit">Delete</button>
        </form>
    </div>

    <!-- Back Button -->
    <div class="back-btn">
        <a href="/maintainEvents"><button>Back to Event List</button></a>
    </div>
  </div>
</body>
<script>
    function confirmDelete(event) {
      if (!confirm("Are you sure you want to delete this event? This action cannot be undone.")) {
        event.preventDefault(); // Prevent form submission if user cancels
      }
    }
</script>  
</html>