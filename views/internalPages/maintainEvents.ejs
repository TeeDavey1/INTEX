<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Records</title>
    <style>
        body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        }
        header {
        background-color: #333;
        color: white;
        padding: 20px 0;
        text-align: center;
        }
        h1 {
        font-size: 2.5rem;
        margin: 0;
        font-weight: 600;
        }
        table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
        font-size: 14px;
        background-color: white;
        }
        th, td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: center;
        font-size: 14px;
        }
        th {
        background-color: #333;
        color: white;
        }
        tr:nth-child(even) {
        background-color: #f9f9f9;
        }
        tr:hover {
        background-color: #f1f1f1;
        }
        button {
        background-color: #228B22;
        color: white;
        border: none;
        padding: 6px 12px;
        cursor: pointer;
        font-size: 12px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        margin: 0 5px;
        }
        button:hover {
        background-color: #1e7e1e;
        }
        .btn-container {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        }
        .container {
        width: 90%;
        margin: 0 auto;
        padding: 20px;
        }
        .no-data {
        text-align: center;
        color: #333;
        font-size: 16px;
        }
        .action-buttons {
        display: flex;
        gap: 10px;
        justify-content: center;
        }
        .action-buttons a {
        text-decoration: none;
        }
    </style>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <%- include('../partials/adminHeader') %>
    <header>
        <h1>Event Records</h1>
    </header>  
    <main>

        <div class="container">
        <table>
            <thead>
            <tr>
                <th>Event Date</th>
                <th>Contact First Name</th>
                <th>Contact Last Name</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% if (Events && Events.length > 0) { %>
                <% Events.forEach(row => { %>
                <tr>
                    <td><%= row.actualEventDate %></td>
                    <td><%= row.contactFirst %></td>
                    <td><%= row.contactLast %></td>
                    <td class="action-buttons">
                    <a href="/viewEvent/<%= row.eventId %>">
                        <button>View</button>
                    </a>
                    <a href="/editEvent/<%= row.eventId %>">
                        <button>Edit</button>
                    </a>
                    <form action="/deleteEvent/<%= row.eventId %>" method="POST" style="display:inline;" onsubmit="confirmDelete(event)">
                        <button type="submit">Delete</button>
                    </form>                
                    </td>
                </tr>
                <% }) %>
            <% } else { %>
                <tr>
                <td colspan="4" class="no-data">No events found</td>
                </tr>
            <% } %>
            </tbody>
        </table>

        <div style="text-align: center;">
            <form action="/addEvent" method="GET">
            <button type="submit">Add Event</button>
            </form>
        </div>
        </div>
    </main>
    </body>
    <script>
    function confirmDelete(event) {
        if (!confirm("Are you sure you want to delete this event? This action cannot be undone.")) {
        event.preventDefault(); // Prevent form submission if user cancels
        }
    }
</script>
</html>
