<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Event</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }
    header {
      background-color: #333;
      color: white;
      padding: 20px 0;
      text-align: center;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    h1 {
      font-size: 2.5rem;
      margin: 0;
      font-weight: 600;
    }
    .container {
      width: 80%;
      margin: 20px auto;
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    h2 {
      text-align: center;
      color: #333;
      font-size: 2rem;
    }
    .section {
      margin: 20px 0;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 8px;
      background-color: #f9f9f9;
    }
    .section h3 {
      font-size: 1.5rem;
      color: #333;
      margin-bottom: 10px;
    }
    .info {
      margin: 8px 0;
      font-size: 16px;
      color: #555;
    }
    .row {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
    }
    .column {
      flex: 1;
      min-width: 200px;
    }
    input, select {
      width: 100%;
      padding: 8px;
      margin: 5px 0;
      border-radius: 5px;
      border: 1px solid #ccc;
    }
    button {
      background-color: #228B22;
      color: white;
      border: none;
      padding: 8px 16px;
      cursor: pointer;
      font-size: 14px;
      border-radius: 5px;
    }
    button:hover {
      background-color: #1e7e1e;
    }
    .action-buttons {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <header>
    <h1>Edit Event</h1>
  </header>

  <form action="/editEvent/<%= events.eventId %>" method="POST" onsubmit="return confirmSave(event)">

    <div class="container">
        <h2>Update Event Details for <%= eventcontact.contactfirst %> <%= eventcontact.contactlast %></h2>

        <!-- Event Contact Details -->
        <div class="row">
          <div class="column">
            <div class="section">
              <h3>Contact Information</h3>
              <label for="contactfirst">First Name:</label>
              <input type="text" id="contactfirst" name="contactfirst" value="<%= eventcontact.contactfirst %>" required>

              <label for="contactlast">Last Name:</label>
              <input type="text" id="contactlast" name="contactlast" value="<%= eventcontact.contactlast %>" required>

              <label for="contactphone">Phone:</label>
              <input type="text" id="contactphone" name="contactphone" value="<%= eventcontact.contactphone %>" required>

              <label for="contactemail">Email:</label>
              <input type="email" id="contactemail" name="contactemail" value="<%= eventcontact.contactemail %>" required>
            </div>
          </div>
        </div>

        <!-- Event Preferences -->
        <div class="row">
          <div class="column">
            <div class="section">
              <h3>Event Preferences</h3>
              <label for="eventPrefDate">Preferred Date:</label>
              <input type="date" id="eventPrefDate" name="eventPrefDate" value="<%= eventPrefDate %>" required>

              <label for="eventPossDate">Possible Date:</label>
              <input type="date" id="eventPossDate" name="eventPossDate" value="<%= eventPossDate %>" required>

              <label for="prefTime">Preferred Time:</label>
              <input type="text" id="prefTime" name="prefTime" value="<%= prefTime %>" required>

              <label for="prefDuration">Preferred Duration:</label>
              <input type="text" id="prefDuration" name="prefDuration" value="<%= prefDuration %>" required>

              <label for="serviceType">Service Type:</label>
              <input type="text" id="serviceType" name="serviceType" value="<%= serviceType %>" required>
            </div>
          </div>
        </div>

        <!-- Address -->
        <div class="section">
          <h3>Address</h3>
          <label for="streetAddress">Street Address:</label>
          <input type="text" id="streetAddress" name="streetAddress" value="<%= streetAddress %>" required>

          <label for="city">City:</label>
          <input type="text" id="city" name="city" value="<%= city %>" required>

          <label for="state">State:</label>
          <input type="text" id="state" name="state" value="<%= state %>" required>

          <label for="zipCode">Zip Code:</label>
          <input type="text" id="zipCode" name="zipCode" value="<%= zipCode %>" required>
        </div>

        <!-- Sewing Requirements -->
        <div class="section">
          <h3>Sewing Requirements</h3>
          <label for="basicSewing">Basic Sewing:</label>
          <input type="text" id="basicSewing" name="basicSewing" value="<%= basicSewing %>" required>

          <label for="advSewing">Advanced Sewing:</label>
          <input type="text" id="advSewing" name="advSewing" value="<%= advSewing %>" required>

          <label for="sewingMachines">Sewing Machines:</label>
          <input type="text" id="sewingMachines" name="sewingMachines" value="<%= sewingMachines %>" required>

          <label for="sergers">Sergers:</label>
          <input type="text" id="sergers" name="sergers" value="<%= sergers %>" required>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons">
          <button type="submit">Save Changes</button>
          <a href="javascript:void(0)" onclick="goBack()">
            <button type="button">Cancel</button>
          </a>
        </div>
    </div>
  </form>

</body>
<script>
    function confirmSave(event) {
        if (!confirm("Are you sure you want to save changes?")) {
          event.preventDefault();
          return false;
        }
        return true;
    }

    function goBack() {
        window.history.back();
    }
</script>
</html>
